<h1>Quick Facts</h1>

<%= form_tag @fact, method:'get', action:'search' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<br>

<hr>

<%= form_for @fact, url:facts_url, action: "create" do |f| %>
	<p>
		<%= f.label :add_fact %><br>
		<%= f.text_area :content %>
	</p>
	
	<%= f.submit "Add Fact" %>
<% end %>