<% provide(:title, 'Log in') %>

<h1><%= yield :title %></h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3 form-group">
		<%= form_for(:session, url: login_path)  do |f| %>
			<%= f.label :email %>
			<%= f.email_field :email, value: params.fetch(:session, {})[:email], class: "form-control" %>

			<%= f.label :password %>
			<%= f.password_field :password, class: "form-control" %>

			<%= f.submit "Log In", class: "btn btn-primary form-control" %>
			<hr>
			<span>New user? </span><%= link_to "Sign up", new_user_path %>
		<% end %>
	</div>
</div>
